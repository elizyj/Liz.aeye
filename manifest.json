{
  "manifest_version": 3,
  "name": "Accessibility Assistant",
  "version": "1.4.0",
  "description": "Audio assistant for low-vision users: summarize pages and help fill forms.",
  "permissions": ["activeTab", "storage", "scripting", "commands"],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessibility Assistant"
  },
  "commands": {
    "start-assistant": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Start the accessibility assistant"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
