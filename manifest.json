{
  "manifest_version": 3,
  "name": "Accessibility Assistant",
  "version": "1.0",
  "description": "Chrome extension to help lower visibility users navigate and fill forms on websites",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessibility Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
